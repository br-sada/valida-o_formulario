{% extends "layout.njk" %}

{% block content %}
    <div class="content">
        <h3>Dados Pessoais</h3>
        <form action="">
            <div class="forms">
                <div class="form-group">
                    <label for="">Nome:</label>
                    <input type="text" name="name" id="name" required>
                </div>

                <div class="form-group">
                    <label for="">Sobrenome:</label>
                    <input type="text" name="lastname" id="lastname" required>
                </div>

                <div class="form-group">
                    <label for="">Sexo:</label>
                    <select name="gender" id="gender">
                        <option value="m" selected>Masculino</option>
                        <option value="f">Feminino</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="">CPF:</label>
                    <input type="text" name="cpf" id="cpf" autocomplete="off" maxlength="14" onkeyup="mascaracpf(this)">
                </div>

                <div class="form-group">
                    <label for="">Telefone:</label>
                    <input type="text" name="tel" id="tel" autocomplete="off" maxlength="10" onkeyup="validartel(this)">
                </div>

                <div class="form-group">
                    <label for="">Celular:</label>
                    <input type="text" name="cel" id="cel">
                </div>

                <div class="form-group">
                    <label for="">Nascimento:</label>
                    <input type="date" name="birth" id="birth">
                </div>

                <div class="form-group">
                    <label for="">Cep:</label>
                    <input type="text" name="cep" id="cep" maxlength="9" onblur="consultaCep(this)" required>
                </div>

                <div class="form-group">
                    <label for="">Rua:</label>
                    <input type="text" name="logradouro" id="logradouro">
                </div>

                <div class="form-group">
                    <label for="">Número:</label>
                    <input type="number" name="rua_numero" id="rua_numero">
                </div>

                <div class="form-group">
                    <label for="">Complemento:</label>
                    <input type="text" name="complemento" id="complemento">
                </div>

                <div class="form-group">
                    <label for="">Referência:</label>
                    <input type="text" name="referencia" id="referencia">
                </div>

                <div class="form-group">
                    <label for="">Bairro:</label>
                    <input type="text" name="bairro" id="bairro">
                </div>

                <div class="form-group">
                    <label for="">Cidade:</label>
                    <input type="text" name="localidade" id="localidade">
                </div>

                <div class="form-group">
                    <label for="">Estado:</label>
                    <input type="text" name="uf" id="uf">
                </div>
            </div>
            <button class="button" type="submit">Enviar</button>
        </form>
    </div>
{% endblock content %}